<h1>All Matchs</h1>

<%@admin = Administrator.find_by_id(session[:admin_id])%>

<!-- All created matchs will be displayed.-->
<h3> Matchs created </h3>
<% @admin.matches.each do |m| %> 

    <!-- For each created match we can edit or delete.-->
    <% m.id %> <%= m.home_team.name %> vs <%= m.visitor_team.name %> Date: <%= m.date %> en el <%= m.stadium%> <a href="/all_matchs/<%= m.id%>/edit">Edit Match</a>  
    
    <!-- This is a button to delete the match-->
    <!-- It calls a post method, but overrides it with delete-->
    <form action="/all_matchs_delete/ <%= m.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete Match" />
    </form>
    </p>

<% end %>

<p><a href="/landingpage_admin">Back</a></p>
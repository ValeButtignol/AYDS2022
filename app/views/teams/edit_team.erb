<h1> Edit Team</h1>

<!-- It calls a post method and overrides it with the patch method for update-->
<form action="/all_teams_edit/<%= @team.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  Name: <input type="text" name="name" value="<%= @team.name %>" />
  Enter Group: 
      <select name="group_id">
        <% @group = Group.all%>
        <% @group.each do |t| %>
         <option value="<%= t.id %>"> <%= t.name %> </option>
        <% end %>
      </select>
  <input type="submit" value="Edit Team" />

</form>

<p><a href="/landingpage_admin">Back</a></p>

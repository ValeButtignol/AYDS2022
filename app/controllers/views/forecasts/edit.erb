<h1> Edit Forecast </h1>

<!-- It calls a post method and overrides it with the patch method for update-->
<form action="/player/forecast_edit/ <%= @forecast.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  Home Goals: <input type="number" name="home_goals" value="<%= @forecast.home_goals %>" />
  Visitor Goals: <input type="number" name="visitor_goals" value="<%= @forecast.visitor_goals %>" />
  <input type="submit" value="Edit Forecast" />
</form>

<p><a href="/player/forecasts">Back</a></p>
